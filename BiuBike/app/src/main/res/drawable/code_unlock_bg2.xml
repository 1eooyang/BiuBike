<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- layout background -->
    <item>
        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:startColor="#000000"
                android:endColor="#FFFFFF"/>
        </shape>
    </item>
    <!-- layout foreground -->
    <item
        android:bottom="15px"
        android:left="15px"
        android:right="15px"
        android:top="15px">
        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>